<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginStart="18dp"
    android:layout_marginTop="30dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">


    <ImageView
        android:id="@+id/item_storage_cover_img_iv"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:background="#D9D9D9"
        android:scaleType="fitCenter"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/item_storage_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="책 제목"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@id/item_storage_cover_img_iv"
        app:layout_constraintStart_toStartOf="@id/item_storage_cover_img_iv"
        app:layout_constraintTop_toBottomOf="@id/item_storage_cover_img_iv" />

    <TextView
        android:id="@+id/item_storage_author_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="지은이"
        android:textSize="11sp"
        app:layout_constraintEnd_toEndOf="@id/item_storage_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_storage_title_tv"
        app:layout_constraintTop_toBottomOf="@id/item_storage_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>